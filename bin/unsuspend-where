#!/usr/bin/env perl
use 5.14.0;
use warnings;
use utf8::all;
use Anki::Corpus;

my $query = shift
    or die "usage: $0 query\n";

my $corpus = Anki::Corpus->new;
my $count = $corpus->print_each("WHERE suspended=1 AND ($query)");
my $now = time;

if ($count) {
    $| = 1;
    print "Are you sure you want to unsuspend these $count rows? [yN] ";
    exit unless <> =~ /^y/i;

    my $sth = $corpus->prepare("
        UPDATE sentences
        SET suspended=0, unsuspended=$now
        WHERE suspended=1 AND ($query)
    ;");
    $sth->execute;
}
else {
    say "No matches.";
}

