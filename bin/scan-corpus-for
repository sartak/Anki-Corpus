#!/usr/bin/env perl
use 5.14.0;
use warnings;
use utf8::all;
use Anki::Corpus;

my $query = join ' AND ',
            map { $_ =~ s/^-// ? "japanese NOT LIKE '%$_%'" : "japanese LIKE '%$_%'" }
            @ARGV;

my $corpus = Anki::Corpus->new;
$corpus->print_each("
    WHERE $query
    AND suspended=1
;");

