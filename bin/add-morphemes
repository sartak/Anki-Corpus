#!/usr/bin/env perl
use 5.14.0;
use warnings;
use utf8::all;
use Anki::Corpus;

my ($i, $e) = (0, 0);

my $corpus = Anki::Corpus->new;
my $morphology = $corpus->morphology;

$corpus->each_sentence('LEFT JOIN morphemes ON (morphemes.sentence = sentences.rowid) WHERE morphemes.rowid IS NULL;', sub {
    my $sentence = shift;
    say 2**$e++ if ++$i == 2**$e;

    $corpus->dbh->begin_work;
    $sentence->insert_standalone_morphemes;

    #$corpus->dbh->do("UPDATE sentences SET morphemes=? WHERE rowid=?", {},
    #    $corpus->morpheme_string_for($sentence->japanese),
    #    $sentence->id,
    #);

    $corpus->dbh->commit;
});
